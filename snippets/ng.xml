<?xml version="1.0" encoding="UTF-8"?>
<manifest>

    <remote name="ng"
        fetch="https://github.com/droid-ng"
        revision="ng-v4" />

    <remote name="devices"
        fetch="https://github.com/devices-ng" />

    <remote name="gitlab"
        fetch="https://gitlab.com" />

    <remote name="github"
        fetch="https://github.com" />

    <!-- Bootable -->
    <remove-project name="LMODroid/platform_bootable_recovery" /> <project path="bootable/recovery" name="android_bootable_recovery" remote="ng" />

    <!-- Frameworks -->
    <remove-project name="LMODroid/platform_frameworks_base" /> <project path="frameworks/base" name="android_frameworks_base" remote="ng" />

    <!-- Manifest -->
    <remove-project name="LMODroid/manifest" /> <project path="manifest" name="android" remote="ng" />

    <!-- Packages -->
    <remove-project name="LMODroid/platform_packages_apps_SetupWizard" /> <project path="packages/apps/SetupWizard" name="android_packages_apps_SetupWizard" remote="ng" />
    <remove-project name="android_packages_modules_adb" /> <project path="packages/modules/adb" name="android_packages_modules_adb" remote="ng" />

    <!-- System -->
    <remove-project name="LMODroid/platform_system_core" /> <project path="system/core" name="android_system_core" remote="ng" />

    <!-- Vendor -->
    <project path="vendor/droid-ng" name="android_vendor_droid-ng" remote="ng" />
	<project path="vendor/gapps" name="MindTheGapps/vendor_gapps" remote="gitlab" revision="tau" groups="nonfree" />

</manifest>
